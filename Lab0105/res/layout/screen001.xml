<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- Simple toggle button with on/off function -->
    <!-- Note selector as drawable background -->
    
    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/padding_medium"
        android:textOff="status is OFF"
        android:textOn="status is ON"
        android:background="@drawable/mybuttontoggle"
        tools:context=".ToggleButton" />
</RelativeLayout>